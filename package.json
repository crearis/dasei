{
  "name": "crearis-nuxt",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theaterpedia/crearis-nuxt.git"
  },
  "keywords": [
    "ui",
    "components",
    "typescript",
    "vue",
    "nuxt"
  ],
  "type": "module",
  "scripts": {
    "start": "node .output/server/index.mjs ",
    "build": "nuxt build --log-level=verbose",
    "codegen": "graphql-codegen",
    "prepare": "nuxt prepare",
    "dev": "pruvious dev",
    "dev:theme": "pnpm --filter=theme dev",
    "dev:ui": "pnpm --filter=ui dev",
    "dev:home": "pnpm --filter=home dev",
    "build:theme": "pnpm --filter=theme build",
    "build:ui": "pnpm --filter=ui build",
    "build:home": "pnpm --filter=home build",
    "format": "prettier --write .",
    "postinstall": "pnpm build:ui && pnpm prepare && pnpm run codegen",
    "test": "vitest",
    "testui": "vitest --ui"
  },
  "dependencies": {
    "@apollo/client": "^3.8.6",
    "@azure/msal-node": "^2.7.0",
    "@crearis/vue": "^0.0.8",
    "@nuxt/image": "^1.8.1",
    "@vue-storefront/sdk": "^2.0.0",
    "currency.js": "^2.0.4",
    "react": "^18.2.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "nuxt": "^3.13.2",
    "nuxt-lazy-hydrate": "^1.0.0",
    "prettier": "^3.3.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "pruvious": "^3.13.2",
    "vue": "^3.5.8",
    "vue-router": "^4.4.5",
    "vue-slider-component": "4.1.0-beta.7",
    "vue-toastification": "next"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@vitest/ui": "^2.1.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "vite": "^5.3.5",
    "vitest": "^2.1.2"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0"
  }
}